{
  "name": "react-hono-typeorm",
  "private": true,
  "type": "module",
  "scripts": {
    "config": "node config.mjs",
    "dev": "npm run config && react-router dev --port 3000",
    "build": "npm run config && react-router build",
    "start": "node ./build/server/index.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "typeorm": "typeorm-ts-node-esm",
    "mig:gen": "npm run typeorm migration:generate -- ./server/db/migrations/Auto -d ./server/db/index.ts",
    "mig:run": "npm run typeorm migration:run -d ./server/db/index",
    "mig:revert": "npm run typeorm migration:revert -d ./server/db/index",
    "mig:show": "npm run typeorm migration:show -d ./server/db/index"
  },
  "dependencies": {
    "@heroui/react": "^2.8.2",
    "@react-router/fs-routes": "^7.8.0",
    "@react-router/node": "^7.8.0",
    "@remixicon/react": "^4.6.0",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "events": "^3.3.0",
    "hashids": "^2.3.0",
    "hono": "^4.9.0",
    "http-status-codes": "^2.3.0",
    "i18next": "^25.3.4",
    "i18next-chained-backend": "^4.6.2",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-backend": "^3.0.2",
    "i18next-localstorage-backend": "^4.2.0",
    "is": "^3.3.2",
    "isbot": "^5.1.27",
    "query-string": "^9.2.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.6.1",
    "react-router": "^7.7.1",
    "react-router-hono-server": "^2.20.0",
    "remix-component-css-loader": "^1.0.9",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.25",
    "yup": "^1.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@react-router/dev": "^7.7.1",
    "@tailwindcss/vite": "^4.1.4",
    "@types/node": "^20",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "esbuild-node-externals": "^1.18.0",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "globals": "^15.12.0",
    "tailwindcss": "^4.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "yaml": "^2.8.1"
  },
  "volta": {
    "node": "22.19.0"
  }
}
